{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@assets/*": ["src/assets/*"],
            "@scripts/*": ["src/scripts/*"],
            "@styles/*": ["src/styles/*"],
            "@layouts/*": ["src/layouts/*"],
            "@publicImages/*": ["public/images/*"]
        }
    }
}
