---
interface Props {
    backgroundColor?: string
}

const { backgroundColor = 'bg-red' } = Astro.props
---

<div
    class:list={[
        'rounded-lg',
        'px-4',
        'py-2',
        'xl:px-6',
        'xl:py-3',
        'text-center',
        'relative',
        'after:absolute',
        'after:inset-0',
        'after:z-10',
        'after:rounded-lg',
        'after:transition',
        'after:backdrop-brightness-100',
        'hover:after:backdrop-brightness-75',
        backgroundColor,
    ]}
>
    <div class="relative z-20 text-xl">
        <slot />
    </div>
</div>
