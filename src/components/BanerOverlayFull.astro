---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'

interface Props {
    imageUrl: string | ImageMetadata
}

const { imageUrl } = Astro.props
---

<div class="relative">
    <div class="h-full w-full py-12">
        <div class="bg-gray-dark/70 relative z-10 h-full w-full">
            <div
                class="z-20 flex flex-col items-center justify-center gap-6 py-18 text-center"
            >
                <slot />
            </div>
        </div>
    </div>
    <div class="absolute inset-0">
        <Image src={imageUrl} alt="" class="h-full w-full object-cover" />
    </div>
</div>
